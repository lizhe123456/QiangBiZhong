<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.youth.banner.Banner
                        android:id="@+id/bannerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm_200" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dm_15">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_16"
                        tool:text="【水光针】欣菲聆水光针2ml（补水·美白·嫩肤）还你娇嫩肌肤 ..."/>
                    <LinearLayout
                        android:id="@+id/ll_now_moeny2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignBottom="@+id/ll_now_moeny1"
                        android:layout_toRightOf="@+id/ll_now_moeny1"
                        android:layout_marginBottom="@dimen/dm_2"
                        android:layout_marginLeft="@dimen/dm_20">
                    <TextView
                        android:id="@+id/tv_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dm_10"
                        android:textColor="@color/tv_navigation"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dm_2"
                            android:layout_marginLeft="@dimen/dm_5"
                            android:src="@drawable/ic_yudou" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_now_moeny1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dm_5"
                        android:layout_below="@+id/tv_title">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/goods_price"
                            android:textSize="@dimen/dm_18"
                            tool:text="580"
                            android:layout_gravity="bottom"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dm_5"
                            android:layout_marginLeft="@dimen/dm_5"
                            android:src="@drawable/ic_yudou" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_sales_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_13"
                        tool:text="销量：101"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dm_10"
                        android:layout_alignBottom="@+id/ll_now_moeny2"
                        android:drawableLeft="@drawable/ic_sales_volume"
                        android:drawablePadding="@dimen/dm_10"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="买家评论"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_13"
                    android:layout_marginTop="@dimen/dm_10"
                    android:padding="@dimen/dm_15"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1" />
                <TextView
                    android:id="@+id/tv_no_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂时还没有评论"
                    android:textColor="@color/tv_navigation"
                    android:textSize="@dimen/dm_13"
                    android:padding="@dimen/dm_15"
                    android:background="@color/white"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>
                <RelativeLayout
                    android:id="@+id/ll_zo_co"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dm_15"
                    android:paddingBottom="@dimen/dm_15"
                    android:paddingLeft="@dimen/dm_15"
                    android:paddingRight="@dimen/dm_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dm_14"
                        android:textColor="@color/colorAccent"
                        android:text="查看用户所有评价" />

                    <TextView
                        android:id="@+id/tv_cat_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dm_14"
                        android:textColor="@color/tv_navigation"
                        tool:text="查看更多共有2条"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/ic_more"
                        android:drawablePadding="@dimen/dm_5"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_effect"
                    android:layout_marginTop="@dimen/dm_10"
                    android:layout_marginBottom="@dimen/dm_10">
                    <com.whmnrc.qiangbizhong.widget.RoundedImageView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dm_80"
                        android:layout_height="@dimen/dm_80"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        android:layout_marginLeft="@dimen/dm_15"
                        android:layout_marginTop="@dimen/dm_15"
                        android:layout_marginBottom="@dimen/dm_15"
                        android:layout_marginRight="@dimen/dm_10"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dm_14"
                        android:textColor="@color/tv_191"
                        tool:text="武汉美基元医疗美容机构"
                        android:layout_toRightOf="@+id/iv_img"
                        android:layout_marginTop="@dimen/dm_25"/>
                    <TextView
                        android:id="@+id/tv_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_collection"
                        android:textSize="@dimen/dm_12"
                        android:textColor="@color/white"
                        android:text="进店看看"
                        android:paddingTop="@dimen/dm_3"
                        android:paddingBottom="@dimen/dm_4"
                        android:paddingLeft="@dimen/dm_10"
                        android:paddingRight="@dimen/dm_10"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dm_15"
                        android:layout_marginTop="@dimen/dm_20"/>
                    <TextView
                        android:id="@+id/tv_shop_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_img"
                        android:layout_marginLeft="@dimen/dm_15"
                        android:text="每个女人都有追求美的权力"
                        android:textSize="@dimen/dm_14"
                        android:textColor="@color/tv_navigation"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="@dimen/dm_10" />
                </RelativeLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_45"
                    android:layout_below="@+id/ll_all_title"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/tv_title_color"
                    app:tabIndicatorHeight="@dimen/dm_2"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/tv_title_color"
                    app:tabTextColor="@color/tv_191" />

                <com.whmnrc.qiangbizhong.widget.WrapContentHeightViewPager
                    android:id="@+id/vp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_49"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_10">
                <View
                    android:layout_width="@dimen/dm_1"
                    android:layout_height="match_parent"
                    android:background="@color/bg_f5f5f5"/>
                <ImageView
                    android:id="@+id/iv_coll"
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_30"
                    android:src="@drawable/ic_collection_bottom"
                    android:layout_marginLeft="@dimen/dm_3"
                    android:layout_marginRight="@dimen/dm_3"/>
                <View
                    android:layout_width="@dimen/dm_1"
                    android:layout_height="match_parent"
                    android:background="@color/bg_f5f5f5"/>
                <ImageView
                    android:id="@+id/iv_customer_service"
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_30"
                    android:src="@drawable/ic_customer_service"
                    android:layout_marginLeft="@dimen/dm_3"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_shop_car"
                android:layout_width="@dimen/dm_130"
                android:layout_height="match_parent"
                android:text="加入购物车"
                android:textSize="@dimen/dm_13"
                android:paddingLeft="@dimen/dm_10"
                android:paddingRight="@dimen/dm_10"
                android:gravity="center"
                android:background="#E7E7E7"
                android:textColor="@color/tv_191"
                android:layout_toLeftOf="@+id/tv_buy"/>
            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="@dimen/dm_130"
                android:layout_height="match_parent"
                android:text="立即购买"
                android:textSize="@dimen/dm_13"
                android:paddingLeft="@dimen/dm_14"
                android:paddingRight="@dimen/dm_14"
                android:gravity="center"
                android:background="@drawable/bg_color_btn"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_69">
        <View
            android:id="@+id/v_hei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_20" />
        <ImageView
            android:id="@+id/iv_shape"
            android:layout_width="@dimen/dm_48"
            android:layout_height="@dimen/dm_48"
            android:layout_below="@+id/v_hei"
            android:scaleType="center"
            android:src="@drawable/ic_shape"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_shop_car"
            android:layout_width="@dimen/dm_48"
            android:layout_height="@dimen/dm_48"
            android:src="@drawable/ic_shop_car"
           android:layout_toLeftOf="@+id/iv_shape"
            android:layout_below="@+id/v_hei"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="@dimen/dm_48"
            android:src="@drawable/ic_black_back"
            android:layout_below="@+id/v_hei"
            android:scaleType="center"/>

    </RelativeLayout>
</RelativeLayout>