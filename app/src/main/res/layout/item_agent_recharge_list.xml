<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dm_10"
    android:layout_marginLeft="@dimen/dm_10"
    android:layout_marginRight="@dimen/dm_10"
    android:background="@drawable/bg_recharge">
    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dm_2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dm_16"
            android:text="58,000"/>
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dm_4"
            android:layout_marginLeft="@dimen/dm_5"
            android:src="@drawable/ic_yudou" />
    </LinearLayout>
    <View
        android:id="@+id/tv_xian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginTop="@dimen/dm_3"
        android:layout_marginBottom="@dimen/dm_3"
        android:background="@color/tv_navigation"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_3">
        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_14"
            android:textColor="@color/tv_navigation"
            android:text="¥500"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:text="¥500"/>
    </RelativeLayout>
</LinearLayout>