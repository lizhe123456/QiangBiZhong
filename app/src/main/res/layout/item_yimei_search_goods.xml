<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dm_15"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dm_10">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dm_92"
        android:layout_height="@dimen/dm_92"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_191"
        android:textSize="@dimen/dm_16"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginLeft="@dimen/dm_10"
        android:text="【水光针】欣菲聆水光针2ml（补水·美白·嫩肤）还你娇嫩肌肤 ..."/>

    <TextView
        android:id="@+id/tv_yimei_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_13"
        android:textColor="@color/tv_navigation"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginLeft="@dimen/dm_10"
        android:text="武汉美基元医疗美容机构"/>
    <LinearLayout
        android:id="@+id/ll_now_moeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginTop="@dimen/dm_5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/goods_price"
            android:textSize="@dimen/dm_18"
            android:text="500"/>

        <ImageView
            android:layout_width="@dimen/dm_18"
            android:layout_height="@dimen/dm_18"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dm_3"
            android:src="@drawable/ic_yudou" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_old_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_navigation"
        android:textSize="@dimen/dm_10"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_toRightOf="@+id/ll_now_moeny"
        android:layout_marginBottom="@dimen/dm_2"
        tool:text="原价850"
        android:layout_marginLeft="@dimen/dm_15"/>

    <TextView
        android:id="@+id/tv_juli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_191"
        android:textSize="@dimen/dm_13"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_img"
        android:text="22.96km"/>


</RelativeLayout>