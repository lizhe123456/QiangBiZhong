<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm_15"
        android:gravity="center_vertical"
        android:background="@color/white">


        <com.whmnrc.qiangbizhong.widget.RoundedImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm_65"
            android:layout_height="@dimen/dm_65"
            app:riv_oval="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_17"
            android:maxLength="10"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_marginTop="@dimen/dm_5"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_navigation"
            android:textSize="@dimen/dm_15"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dm_9"
            android:layout_marginLeft="@dimen/dm_10"
            android:text="123"/>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_20"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toRightOf="@+id/tv_desc"
            android:layout_alignBottom="@+id/tv_desc"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="500"
                android:textColor="@color/tv_navigation"
                android:textSize="@dimen/dm_15" />

            <ImageView
                android:layout_width="@dimen/dm_15"
                android:layout_height="@dimen/dm_15"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dm_2"
                android:layout_marginLeft="@dimen/dm_5"
                android:src="@drawable/ic_yudou" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_buy"
            android:paddingBottom="@dimen/dm_8"
            android:paddingLeft="@dimen/dm_20"
            android:paddingRight="@dimen/dm_20"
            android:paddingTop="@dimen/dm_8"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dm_15" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"/>
</LinearLayout>