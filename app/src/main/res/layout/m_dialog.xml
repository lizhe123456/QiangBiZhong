<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:layout_marginLeft="@dimen/dm_34"
    android:layout_marginRight="@dimen/dm_35">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_120"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_19"
            android:layout_gravity="center"
            android:text="本次商品确定下架吗？"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_45"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/tv_navigation"
            android:text="取消"
            android:gravity="center" />
        <View
            android:layout_width="@dimen/dm_1"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dm_15"
            android:textColor="@color/goods_price"
            android:text="确定"
            android:gravity="center"/>
    </LinearLayout>



</LinearLayout>