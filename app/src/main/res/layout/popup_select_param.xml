<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0000000">


    <LinearLayout
        android:id="@+id/realContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="95dp"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:paddingLeft="130dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-10dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_cha_back"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="26"
                    android:textColor="@color/goods_price"
                    android:textSize="@dimen/dm_25" />

                <TextView
                    android:id="@+id/tv_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="sada"
                    android:textColor="#666666" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="10dp">
                <com.whmnrc.qiangbizhong.widget.RoundedImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dm_100"
                    android:layout_height="@dimen/dm_100"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/dm_5"/>

            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/divider_color"
                android:layout_marginRight="@dimen/dm_15"
                android:layout_marginLeft="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_15"
                android:layout_marginBottom="@dimen/dm_10"
                />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_200"
            android:overScrollMode="never"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="样式"
                    android:textSize="@dimen/dm_13"
                    android:textColor="@color/tv_777"
                    android:paddingLeft="@dimen/dm_15"
                    android:paddingRight="@dimen/dm_15"
                    android:paddingBottom="@dimen/dm_10"
                    android:paddingTop="@dimen/dm_10"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingTop="@dimen/dm_10"
                    android:paddingBottom="@dimen/dm_10"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格"
                    android:textSize="@dimen/dm_13"
                    android:textColor="@color/tv_777"
                    android:paddingLeft="@dimen/dm_15"
                    android:paddingRight="@dimen/dm_15"
                    android:paddingBottom="@dimen/dm_10"
                    android:paddingTop="@dimen/dm_10"
                    android:background="@color/white"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:background="@color/white"/>
                
                <RelativeLayout
                    android:id="@+id/rl_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm_15"
                    android:paddingRight="@dimen/dm_25"
                    android:paddingBottom="@dimen/dm_15"
                    android:paddingTop="@dimen/dm_20"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量"
                        android:textSize="@dimen/dm_12"
                        android:textColor="@color/tv_777"/>
                    <LinearLayout
                        android:layout_width="@dimen/dm_105"
                        android:layout_height="@dimen/dm_25"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:background="@drawable/bg_shopping_car_bg"
                        android:padding="@dimen/dm_1"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/tv_jian"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dm_15"
                            android:textColor="@color/tv_333"
                            android:background="@drawable/btn_effect"
                            android:text="-"
                            android:gravity="center"
                            android:layout_weight="1"/>
                        <View
                            android:layout_width="@dimen/dm_1"
                            android:layout_height="match_parent"
                            android:background="@color/divider_color"/>
                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dm_15"
                            android:textColor="@color/tv_000"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="1"/>
                        <View
                            android:layout_width="@dimen/dm_1"
                            android:layout_height="match_parent"
                            android:background="@color/divider_color"/>
                        <TextView
                            android:id="@+id/tv_jia"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/dm_15"
                            android:background="@drawable/btn_effect"
                            android:textColor="@color/tv_333"
                            android:text="+"
                            android:layout_weight="1"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_45"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_add_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/tv_999"
                android:textSize="@dimen/dm_16"
                android:background="#E7E7E7"
                android:text="加入购物车"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/dm_16"
                android:background="@drawable/bg_color_btn"
                android:text="立即购买"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>