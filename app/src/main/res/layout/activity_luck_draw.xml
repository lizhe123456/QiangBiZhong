<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="#cccccc"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_luck_draw"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawableTop="@drawable/btn_luck_draw"
           android:gravity="center"
           android:padding="@dimen/dm_3"
           android:text="抽奖"
           android:textColor="@color/tv_navigation"
           android:textSize="12sp" />

       <TextView
           android:id="@+id/tv_my_luck_draw"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawableTop="@drawable/btn_my_luck_draw"
           android:gravity="center"
           android:padding="@dimen/dm_3"
           android:text="我的中奖"
           android:textColor="@color/tv_navigation"
           android:textSize="12sp" />

       <TextView
           android:id="@+id/tv_rule"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:drawablePadding="@dimen/dm_2"
           android:drawableTop="@drawable/btn_luck_draw_rlue"
           android:gravity="center"
           android:padding="@dimen/dm_3"
           android:text="抽奖规则"
           android:textColor="@color/tv_navigation"
           android:textSize="12sp"/>


   </LinearLayout>
</LinearLayout>