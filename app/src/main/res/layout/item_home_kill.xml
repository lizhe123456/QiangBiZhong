<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dm_15"
    android:paddingBottom="@dimen/dm_10"
    android:paddingLeft="@dimen/dm_8"
    android:paddingRight="@dimen/dm_8">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="10"
        android:maxWidth="@dimen/dm_60"
        android:textColor="@color/goods_text"
        android:layout_marginTop="@dimen/dm_10"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dm_5">
        <TextView
            android:id="@+id/tv_moeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/goods_price"
            android:textSize="18sp"
            android:text="5000"
            android:layout_gravity="bottom"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dm_5"
            android:src="@drawable/ic_yudou" />
    </LinearLayout>



</LinearLayout>