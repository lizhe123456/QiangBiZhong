<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="@dimen/dm_87"
        android:layout_height="@dimen/dm_87"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/dm_85"
            android:layout_height="@dimen/dm_85"
            android:layout_gravity="center"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_img_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_img_add"
                android:scaleType="center"/>
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dm_15"
            android:layout_height="@dimen/dm_15"
            android:src="@drawable/ic_cha_delete"
            android:layout_gravity="right"/>
    </FrameLayout>


</LinearLayout>