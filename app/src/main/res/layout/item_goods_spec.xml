<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dm_10"
    android:paddingLeft="@dimen/dm_15"
    android:paddingRight="@dimen/dm_15"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dm_10"
    android:paddingBottom="@dimen/dm_5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm_60"
            android:layout_height="@dimen/dm_60"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_14"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_marginLeft="@dimen/dm_10"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_goods_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_13"
            android:textColor="@color/tv_777"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_marginLeft="@dimen/dm_10"
            android:maxLines="1"
            android:ellipsize="end"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"
        android:layout_marginTop="@dimen/dm_10" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dm_10"
        android:paddingBottom="@dimen/dm_10"
        android:gravity="right">
        <TextView
            android:id="@+id/tv_btn_3"
            android:layout_width="@dimen/dm_100"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_title_color"
            android:textSize="@dimen/dm_14"
            android:text="删除"
            android:paddingTop="@dimen/dm_5"
            android:paddingBottom="@dimen/dm_5"
            android:background="@drawable/order_pay_shape_v2"
            android:layout_marginRight="@dimen/dm_15"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="@dimen/dm_100"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_title_color"
            android:textSize="@dimen/dm_14"
            android:text="编辑商品"
            android:paddingTop="@dimen/dm_5"
            android:paddingBottom="@dimen/dm_5"
            android:background="@drawable/order_pay_shape_v2"
            android:layout_marginRight="@dimen/dm_15"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>