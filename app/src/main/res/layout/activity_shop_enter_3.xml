<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:id="@+id/ll_bz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="@dimen/dm_12"
        android:paddingLeft="@dimen/dm_12"
        android:paddingRight="@dimen/dm_12"
        android:weightSum="4"
        android:layout_marginBottom="@dimen/dm_10"
        android:paddingTop="@dimen/dm_10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30"
                android:gravity="right|center"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginRight="@dimen/dm_10"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/iv_bz1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_btn_select"/>
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_3"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line_dash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dm_10"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/tv_navigation"
                android:textSize="@dimen/dm_11"
                android:layout_marginTop="@dimen/dm_17"
                android:text="签订入驻协议"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30"
                android:gravity="left|center"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dm_3"
                    android:background="@drawable/shape_line_dash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dm_10"/>
                <ImageView
                    android:id="@+id/iv_bz2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_select"/>
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dm_3"
                    android:background="@drawable/shape_line_dash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dm_10"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bz2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_191"
                android:layout_marginTop="@dimen/dm_17"
                android:gravity="center_horizontal"
                android:textSize="@dimen/dm_11"
                android:text="填写基础信息"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30"
                android:gravity="left|center"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_3"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line_dash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dm_10"/>
                <ImageView
                    android:id="@+id/iv_bz3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_btn_select"/>
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_3"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line_dash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dm_10"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bz3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_navigation"
                android:textSize="@dimen/dm_11"
                android:gravity="center_horizontal"
                android:text="填写资质信息"
                android:layout_marginTop="@dimen/dm_17"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30"
                android:gravity="left|center"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_3"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line_dash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dm_10"/>
                <ImageView
                    android:id="@+id/iv_bz4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_btn_select"/>
                <View
                    android:layout_width="@dimen/dm_30"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginLeft="@dimen/dm_10"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_bz4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_navigation"
                android:gravity="center_horizontal"
                android:textSize="@dimen/dm_11"
                android:text="店铺开通"
                android:layout_marginTop="@dimen/dm_17"/>

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/layout_enter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_44"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_18" />
</LinearLayout>