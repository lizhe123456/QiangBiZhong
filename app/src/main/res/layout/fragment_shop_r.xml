<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_12"
            android:textColor="@color/tv_navigation"
            android:text="订单"/>
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_17"
            android:textColor="@color/tv_000"
            android:layout_marginLeft="@dimen/dm_5"
            android:text="7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_12"
            android:textColor="@color/tv_navigation"
            android:layout_marginLeft="@dimen/dm_50"
            android:text="销售总额"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_17"
            android:textColor="@color/tv_000"
            android:layout_marginLeft="@dimen/dm_5"
            android:text="7"/>
    </LinearLayout>
    <include layout="@layout/layout_refresh"/>
</LinearLayout>