<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <include layout="@layout/layout_search_goods_back"/>
    <RelativeLayout
        android:id="@+id/rl_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_effect"
        android:layout_marginTop="@dimen/dm_10"
        android:layout_marginBottom="@dimen/dm_10">
        <com.whmnrc.qiangbizhong.widget.RoundedImageView
            android:id="@+id/iv_img1"
            android:layout_width="@dimen/dm_80"
            android:layout_height="@dimen/dm_80"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_15"
            android:layout_marginBottom="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_10"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_14"
            android:textColor="@color/tv_191"
            tool:text="武汉美基元医疗美容机构"
            android:layout_toRightOf="@+id/iv_img1"
            android:layout_marginTop="@dimen/dm_25"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_13"
            android:layout_toRightOf="@+id/iv_img1"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dm_15"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_collection"
            android:textSize="@dimen/dm_12"
            android:textColor="@color/white"
            android:text="收藏"
            android:paddingTop="@dimen/dm_3"
            android:paddingBottom="@dimen/dm_4"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_white_coll"
            android:layout_marginRight="@dimen/dm_15"
            android:drawablePadding="@dimen/dm_5"
            android:layout_marginTop="@dimen/dm_20"/>
        <TextView
            android:id="@+id/tv_shop_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_img1"
            android:layout_marginLeft="@dimen/dm_15"
            tool:text="每个女人都有追求美的权力"
            android:textSize="@dimen/dm_14"
            android:textColor="@color/tv_navigation"
            android:layout_marginBottom="@dimen/dm_10"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_item1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/btn_effect"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_15"/>
            <View
                android:id="@+id/view_item1"
                android:layout_width="@dimen/dm_105"
                android:layout_height="@dimen/dm_2"
                android:background="@color/colorAccent"
                android:layout_marginTop="@dimen/dm_13"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/btn_effect"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:textColor="@color/tv_191"
                android:textSize="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_15"/>
            <View
                android:id="@+id/view_item2"
                android:layout_width="@dimen/dm_105"
                android:layout_height="@dimen/dm_2"
                android:background="@color/colorAccent"
                android:layout_marginTop="@dimen/dm_13"
                android:visibility="invisible"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/btn_effect"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/tv_191"
                android:textSize="@dimen/dm_15"
                android:layout_marginTop="@dimen/dm_15"/>
            <View
                android:id="@+id/view_item3"
                android:layout_width="@dimen/dm_105"
                android:layout_height="@dimen/dm_2"
                android:background="@color/colorAccent"
                android:layout_marginTop="@dimen/dm_13"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_60"
                app:srlTextSizeTitle="@dimen/dm_14"
                app:srlTextSizeTime="@dimen/dm_14"
                app:srlAccentColor="@color/tv_191"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_60"
                app:srlTextSizeTitle="@dimen/dm_14"
                app:srlTextSizeTime="@dimen/dm_14"
                app:srlAccentColor="@color/tv_191"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <ViewStub
            android:id="@+id/vs_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/layout_empty"/>
    </FrameLayout>
</LinearLayout>