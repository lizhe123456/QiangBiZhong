<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm_15"
        android:paddingTop="@dimen/dm_5"
        android:paddingBottom="@dimen/dm_5"
        android:paddingRight="@dimen/dm_15"
        android:gravity="center_vertical">
        <com.whmnrc.qiangbizhong.widget.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dm_35"
            android:layout_height="@dimen/dm_35"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_marginLeft="@dimen/dm_10">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dm_15"
                android:textColor="@color/tv_191"
                android:text="Eason" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dm_12"
                android:textColor="@color/tv_navigation"
                android:text="2018.05.06 12:12:12"
                android:layout_marginTop="@dimen/dm_2"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_img_zj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zhongjiang"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"/>
</LinearLayout>
