<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <include layout="@layout/layout_title"/>
    <WebView
        android:id="@+id/wv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <include layout="@layout/layout_enter1"/>
    <include layout="@layout/layout_enter2"/>
    <include layout="@layout/layout_enter3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dm_10"
        android:paddingBottom="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_selece_no"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_15"
            android:text="我使用本公司服务所须遵守的条款和条件。"
            android:layout_marginLeft="@dimen/dm_15"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="@dimen/dm_15"
        android:text="立即入驻"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_18" />
</LinearLayout>