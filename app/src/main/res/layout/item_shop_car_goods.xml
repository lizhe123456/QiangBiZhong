<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dm_10"
        android:paddingLeft="@dimen/dm_5"
        android:paddingRight="@dimen/dm_5"
        android:paddingTop="@dimen/dm_10">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:paddingTop="@dimen/dm_10"
            android:src="@drawable/ic_selece_no" />

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm_92"
            android:layout_height="@dimen/dm_92"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_10"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/dm_135"
                    android:layout_height="@dimen/dm_35"
                    android:background="@drawable/bg_shopping_car_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/dm_1"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tv_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/btn_effect"
                        android:text="-"
                        android:textColor="@color/tv_333"
                        android:textSize="@dimen/dm_15" />
                    <View
                        android:layout_width="@dimen/dm_1"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_edit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/tv_000"
                        android:textSize="@dimen/dm_15" />

                    <View
                        android:layout_width="@dimen/dm_1"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/tv_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/tv_333"
                        android:textSize="@dimen/dm_15"
                        android:background="@drawable/btn_effect"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_guige"
                    android:layout_width="@dimen/dm_135"
                    android:layout_height="@dimen/dm_35"
                    android:layout_marginTop="@dimen/dm_10"
                    android:background="@drawable/bg_shopping_car_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="红色"
                    android:textColor="@color/tv_000"
                    android:textSize="@dimen/dm_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dm_35"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_shopping_car_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dm_32"
                    android:layout_marginLeft="@dimen/dm_10"
                    android:layout_marginTop="@dimen/dm_10"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_shopping_car_delete" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="博世铂金FR8NP同悦V3菱悦景
逸风神雪铁龙C5世嘉C2标致..."
                android:textColor="@color/tv_000"
                android:textSize="@dimen/dm_15" />

            <TextView
                android:id="@+id/tv_guige_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_name"
                android:layout_marginBottom="@dimen/dm_12"
                android:layout_marginTop="@dimen/dm_3"
                android:text="100g,红色"
                android:textColor="@color/tv_navigation"
                android:textSize="@dimen/dm_12" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_moeny"
                android:layout_alignParentRight="true"
                android:text="99"
                android:textColor="@color/tv_navigation"
                android:textSize="@dimen/dm_14" />

            <LinearLayout
                android:id="@+id/ll_moeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_guige_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_moeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="5000"
                    android:textColor="@color/goods_price"
                    android:textSize="@dimen/dm_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dm_4"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:src="@drawable/ic_yudou" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_xian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"
        android:layout_marginLeft="@dimen/dm_34"/>
</LinearLayout>