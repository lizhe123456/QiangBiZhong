<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_290"
        android:layout_margin="@dimen/dm_15"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:background="@drawable/bg_opinion_back">
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="@dimen/dm_15"
            android:textColorHint="@color/tv_999"
            android:gravity="left"
            android:textColor="@color/tv_000"
            android:hint="请输入反馈，我们将为您不断改进"
            android:padding="@dimen/dm_5"
            android:inputType="text"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_img_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <TextView
        android:id="@+id/tv_release_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_17"
        android:textColor="@color/tv_999"
        android:background="@drawable/bg_release_goods"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"
        android:paddingBottom="@dimen/dm_12"
        android:paddingTop="@dimen/dm_12"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="发表评价"
        android:layout_marginTop="@dimen/dm_50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dm_12"
        android:textColor="@color/tv_navigation"
        android:text="提醒：文明发言，请勿发表涉及政治色情等敏感内容。"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_11"
        />
</LinearLayout>