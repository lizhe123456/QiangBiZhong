<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_all_title"
        android:layout_marginTop="@dimen/dm_20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dm_37"
        android:paddingRight="@dimen/dm_37"
        android:paddingTop="@dimen/dm_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/register_validate_code" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_19"
                android:layout_weight="1"
                android:background="@color/transparency"
                android:hint="输入验证码"
                android:maxLength="6"
                android:paddingBottom="@dimen/dm_22"
                android:paddingTop="@dimen/dm_22"
                android:textColor="@color/text_color"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="phone|number"
                android:digits="1234567890"
                android:singleLine="true"  />

            <TextView
                android:id="@+id/bt_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dm_110"
                android:gravity="center"
                android:background="@drawable/bg_get_code"
                android:paddingBottom="@dimen/dm_8"
                android:paddingLeft="@dimen/dm_14"
                android:paddingRight="@dimen/dm_14"
                android:paddingTop="@dimen/dm_8"
                android:text="@string/get_code_tv"
                android:textColor="#2399FD"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:background="@color/divider_color" />
        <!-- 手机号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm_7">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_password" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:background="@color/transparency"
                android:hint="输入支付密码"
                android:maxLength="6"
                android:paddingBottom="@dimen/dm_22"
                android:paddingTop="@dimen/dm_22"
                android:textColor="@color/text_color"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="numberPassword"
                android:digits="1234567890"
                android:singleLine="true"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm_7">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_password" />
            <EditText
                android:id="@+id/et_pwd_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:background="@color/transparency"
                android:hint="确认支付密码"
                android:maxLength="6"
                android:paddingBottom="@dimen/dm_22"
                android:paddingTop="@dimen/dm_22"
                android:textColor="@color/text_color"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="numberPassword"
                android:digits="1234567890"
                android:singleLine="true"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:background="#dddddd" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_input"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_74"
        android:background="@drawable/login_shap"
        android:gravity="center"
        android:paddingBottom="@dimen/dm_12"
        android:paddingTop="@dimen/dm_12"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>