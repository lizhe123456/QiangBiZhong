<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_100"
        android:layout_margin="@dimen/dm_15"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:background="@drawable/bg_opinion_back">
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="@dimen/dm_15"
            android:textColorHint="@color/tv_999"
            android:gravity="left"
            android:textColor="@color/tv_000"
            android:hint="请输入反馈，我们将为您不断改进"
            android:padding="@dimen/dm_5"
            android:inputType="text"
            android:maxLength="20"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_999"
            android:textSize="@dimen/dm_12"
            android:gravity="right"
            android:layout_marginRight="@dimen/dm_5"
            android:layout_marginBottom="@dimen/dm_5"
            android:text="（0/20）"/>
    </LinearLayout>



    
    
</LinearLayout>