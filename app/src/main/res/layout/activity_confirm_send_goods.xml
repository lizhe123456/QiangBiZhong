<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:id="@+id/rl_wuliu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_effect"
        android:paddingBottom="@dimen/dm_12"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:paddingTop="@dimen/dm_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm_10"
            android:text="物流公司："
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_14" />

        <TextView
            android:id="@+id/t_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right"
            android:inputType="text"
            android:maxLength="10"
            android:paddingLeft="@dimen/dm_10"
            android:text="请输入物流公司"
            android:textColor="@color/tv_navigation"
            android:textSize="@dimen/dm_14" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:background="@color/divider_color" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_effect"
        android:paddingBottom="@dimen/dm_12"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:paddingTop="@dimen/dm_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm_10"
            android:text="运单号："
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_14" />

        <EditText
            android:id="@+id/et_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right"
            android:hint="请填写单号"
            android:inputType="number"
            android:maxLength="20"
            android:paddingLeft="@dimen/dm_10"
            android:textColor="@color/tv_navigation"
            android:textSize="@dimen/dm_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_30"
        android:background="@drawable/bg_btn_buy_v2"
        android:gravity="center"
        android:paddingBottom="@dimen/dm_15"
        android:paddingTop="@dimen/dm_15"
        android:text="确认发货"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_15" />
</LinearLayout>