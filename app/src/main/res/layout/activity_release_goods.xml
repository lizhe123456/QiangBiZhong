<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="添加标题(20字以内)"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="@dimen/dm_15"
                android:textColor="@color/tv_000"
                android:textColorHint="@color/tv_navigation"
                android:textSize="@dimen/dm_15" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:layout_marginRight="@dimen/dm_15"
                    android:background="@color/divider_color" />
            </FrameLayout>


            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_134"
                android:background="@color/white"
                android:gravity="left"
                android:hint="描述下您的商品吧！(140字以内)"
                android:inputType="text"
                android:maxLength="140"
                android:padding="@dimen/dm_15"
                android:textColor="@color/tv_000"
                android:textColorHint="@color/tv_navigation"
                android:textSize="@dimen/dm_15" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dm_15">

                <ImageView
                    android:id="@+id/iv_goods_img"
                    android:layout_width="@dimen/dm_85"
                    android:layout_height="@dimen/dm_85"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_img" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_10" />

            <RelativeLayout
                android:id="@+id/rl_select_classify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_effect"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="商品分类"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_14" />

                <TextView
                    android:id="@+id/ic_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/dm_10"
                    android:drawableRight="@drawable/ic_more"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="请选择商品分类"
                    android:textColor="@color/tv_navigation"
                    android:textSize="@dimen/dm_14" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:layout_marginRight="@dimen/dm_15"
                    android:background="@color/divider_color" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_effect"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="品牌"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_14" />

                <EditText
                    android:id="@+id/et_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLength="10"

                    android:paddingLeft="@dimen/dm_10"
                    android:hint="请输入品牌"
                    android:gravity="right"
                    android:textColor="@color/tv_navigation"
                    android:textSize="@dimen/dm_14" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:layout_marginRight="@dimen/dm_15"
                    android:background="@color/divider_color" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_effect"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="最低价格"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_14" />

                <EditText
                    android:id="@+id/et_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dm_10"
                    android:hint="请输入价格"
                    android:gravity="right"
                    android:digits="0123456789."
                    android:textColor="@color/tv_navigation"
                    android:textSize="@dimen/dm_14" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:layout_marginRight="@dimen/dm_15"
                    android:background="@color/divider_color" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_effect"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="最高价格"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_14" />

                <EditText
                    android:id="@+id/et_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:inputType="number"
                    android:gravity="right"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dm_10"
                    android:hint="请输入价格"
                    android:digits="0123456789."
                    android:textColor="@color/tv_navigation"
                    android:textSize="@dimen/dm_14" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1"
                    android:layout_marginLeft="@dimen/dm_15"
                    android:layout_marginRight="@dimen/dm_15"
                    android:background="@color/divider_color" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_effect"
                android:paddingBottom="@dimen/dm_12"
                android:paddingLeft="@dimen/dm_15"
                android:paddingRight="@dimen/dm_15"
                android:paddingTop="@dimen/dm_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm_10"
                    android:text="排序"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_14" />

                <EditText
                    android:id="@+id/et_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dm_10"
                    android:hint="请输入排序"
                    android:digits="123456789"
                    android:gravity="right"
                    android:textColor="@color/tv_navigation"
                    android:textSize="@dimen/dm_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_release"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_49"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="确认发布"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_18" />
</LinearLayout>