<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dm_15"
        android:text="旧密码："
        android:textColor="@color/tv_191"
        android:textSize="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"/>

    <EditText
        android:id="@+id/et_old_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="若包含字母 ，请注意区分大小写"
        android:maxLength="18"
        android:paddingBottom="@dimen/dm_10"
        android:paddingTop="@dimen/dm_10"
        android:textColor="@color/tv_191"
        android:textColorHint="@color/tv_navigation"
        android:textSize="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:background="@color/divider_color" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dm_15"
        android:text="新密码："
        android:textColor="@color/tv_191"
        android:textSize="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"/>

    <EditText
        android:id="@+id/et_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="若包含字母 ，请注意区分大小写"
        android:maxLength="18"
        android:paddingBottom="@dimen/dm_10"
        android:paddingTop="@dimen/dm_10"
        android:textColor="@color/tv_191"
        android:textColorHint="@color/tv_navigation"
        android:textSize="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:background="@color/divider_color" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dm_15"
        android:text="确认新密码："
        android:textColor="@color/tv_191"
        android:textSize="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"/>

    <EditText
        android:id="@+id/et_new_pass_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="若包含字母 ，请注意区分大小写"
        android:maxLength="18"
        android:paddingBottom="@dimen/dm_10"
        android:paddingTop="@dimen/dm_10"
        android:textColor="@color/tv_191"
        android:textColorHint="@color/tv_navigation"
        android:textSize="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:background="@color/divider_color" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dm_15"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="确认"
            android:layout_marginLeft="@dimen/dm_22"
            android:layout_marginRight="@dimen/dm_22"
            android:paddingTop="@dimen/dm_12"
            android:paddingBottom="@dimen/dm_12"
            android:layout_marginTop="@dimen/dm_30"
            android:background="@drawable/login_shap" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用短信验证找回"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_15"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>