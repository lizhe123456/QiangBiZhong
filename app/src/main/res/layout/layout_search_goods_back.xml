<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_20"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dm_48"
            android:layout_height="@dimen/dm_48"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            />
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_48"
            android:layout_toRightOf="@+id/iv_img"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dm_10"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_15"
            android:paddingTop="@dimen/dm_10">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@null"
                    android:textColor="@color/tv_6E6E6E"
                    android:textSize="12sp"
                    android:hint="@string/search"
                    android:textColorHint="@color/tv_6E6E6E"
                    android:inputType="text"
                    android:maxLines="1"/>
            </FrameLayout>
        </LinearLayout>
        
    </RelativeLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"/>
</LinearLayout>