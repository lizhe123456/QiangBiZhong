<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dm_15"
        android:paddingLeft="@dimen/dm_15"
        android:paddingRight="@dimen/dm_15"
        android:paddingTop="@dimen/dm_20">

        <com.whmnrc.qiangbizhong.widget.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dm_40"
            android:layout_height="@dimen/dm_40"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_toRightOf="@+id/iv_head"
            android:text="氧气45489"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_14" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_toRightOf="@+id/iv_head"
            android:text="氧气45489"
            android:textColor="@color/tv_191"
            android:textSize="@dimen/dm_14"
            android:layout_marginTop="@dimen/dm_15"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="氧气45489"
            android:textColor="@color/tv_navigation"
            android:textSize="@dimen/dm_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_img_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_marginTop="@dimen/dm_10"
            android:layout_toRightOf="@+id/iv_head"
            android:overScrollMode="never" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:background="@color/divider_color"/>
</LinearLayout>