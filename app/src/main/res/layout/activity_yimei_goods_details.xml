<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_f5f5f5"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/iv_goods_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_200" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dm_15">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="【水光针】欣菲聆水光针2ml（补水·美白·嫩肤）还你娇嫩肌肤 ..."
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_16" />

                    <LinearLayout
                        android:id="@+id/ll_now_moeny2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignBottom="@+id/ll_now_moeny1"
                        android:layout_toRightOf="@+id/ll_now_moeny1"
                        android:layout_marginBottom="@dimen/dm_2"
                        android:layout_marginLeft="@dimen/dm_20">
                        <TextView
                            android:id="@+id/tv_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dm_10"
                            android:textColor="@color/tv_navigation"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dm_2"
                            android:layout_marginLeft="@dimen/dm_5"
                            android:src="@drawable/ic_yudou" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_now_moeny1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginTop="@dimen/dm_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            tool:text="580"
                            android:textColor="@color/goods_price"
                            android:textSize="@dimen/dm_18" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dm_5"
                            android:layout_marginLeft="@dimen/dm_5"
                            android:src="@drawable/ic_yudou" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_loction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        tool:text="武汉市"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_13" />

                    <TextView
                        android:id="@+id/tv_yuyue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ll_now_moeny2"
                        android:layout_marginTop="@dimen/dm_10"
                        tool:text="已预约：101"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_13" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm_10"
                    android:layout_marginTop="@dimen/dm_10"
                    android:background="@drawable/btn_effect">

                    <com.whmnrc.qiangbizhong.widget.RoundedImageView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dm_80"
                        android:layout_height="@dimen/dm_80"
                        android:layout_marginBottom="@dimen/dm_15"
                        android:layout_marginLeft="@dimen/dm_15"
                        android:layout_marginRight="@dimen/dm_10"
                        android:layout_marginTop="@dimen/dm_15"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm_15"
                        android:layout_toRightOf="@+id/iv_img"
                        tool:text="武汉美基元医疗美容机构"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_15" />

                    <TextView
                        android:id="@+id/tv_zizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="@dimen/dm_5"
                        android:layout_toRightOf="@+id/iv_img"
                        tool:text="资质：医疗美容医院"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_13" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_zizhi"
                        android:layout_marginTop="@dimen/dm_5"
                        android:layout_toRightOf="@+id/iv_img"
                        tool:text="地址：武汉市武昌区杏林路"
                        android:textColor="@color/tv_191"
                        android:textSize="@dimen/dm_13" />

                    <TextView
                        android:id="@+id/tv_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dm_15"
                        android:layout_marginTop="@dimen/dm_20"
                        android:background="@drawable/bg_collection"
                        android:paddingBottom="@dimen/dm_4"
                        android:paddingLeft="@dimen/dm_10"
                        android:paddingRight="@dimen/dm_10"
                        android:paddingTop="@dimen/dm_3"
                        android:text="收藏"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm_12" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_effect"
                    android:padding="@dimen/dm_15"
                    android:text="看看大家怎么说（0）"
                    android:textColor="@color/tv_191"
                    android:textSize="@dimen/dm_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_49"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_15"
                android:textColor="@color/tv_191"
                android:textSize="@dimen/dm_12"
                tool:text="价格：" />

            <LinearLayout
                android:id="@+id/ll_now_moeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_price_title"
                android:layout_marginLeft="@dimen/dm_11"
                android:layout_toRightOf="@+id/tv_price_title"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_now_moeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    tool:text="5000"
                    android:textColor="@color/goods_price"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dm_5"
                    android:layout_marginLeft="@dimen/dm_5"
                    android:src="@drawable/ic_yudou" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_30"
                android:layout_toRightOf="@+id/ll_now_moeny"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dm_1"
                    android:layout_height="match_parent"
                    android:background="@color/bg_f5f5f5" />

                <ImageView
                    android:id="@+id/iv_coll"
                    android:layout_width="@dimen/dm_34"
                    android:layout_height="@dimen/dm_34"
                    android:layout_marginLeft="@dimen/dm_3"
                    android:layout_marginRight="@dimen/dm_3"
                    android:src="@drawable/ic_collection_bottom" />

                <View
                    android:layout_width="@dimen/dm_1"
                    android:layout_height="match_parent"
                    android:background="@color/bg_f5f5f5" />

                <ImageView
                    android:id="@+id/iv_customer_service"
                    android:layout_width="@dimen/dm_34"
                    android:layout_height="@dimen/dm_34"
                    android:layout_marginLeft="@dimen/dm_3"
                    android:src="@drawable/ic_customer_service" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_color_btn"
                android:gravity="center"
                android:paddingLeft="@dimen/dm_30"
                android:paddingRight="@dimen/dm_30"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/dm_13" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_69">

        <View
            android:id="@+id/v_hei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_20" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dm_48"
            android:layout_height="@dimen/dm_48"
            android:layout_below="@+id/v_hei"
            android:scaleType="center"
            android:src="@drawable/ic_black_back" />

    </RelativeLayout>
</RelativeLayout>